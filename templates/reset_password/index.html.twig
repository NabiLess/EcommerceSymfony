{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - LeBipBip{% endblock %}

{% block content %}
       <div class="block-small"> 
        {% for message in app.flashes('notice') %}
            <div class="alert alert-info">{{message}}</div>
        {% endfor %}
            <form method="post">
           
                <h1 class="h3 mb-3 font-weight-normal">Mot de passe oublié</h1>
                <label for="inputEmail">Votre Email</label>
                <input type="email" value="" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Votre email..."  required autofocus>
                    
                <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">
                    Réinitialiser
                </button>
                <hr>
                <p class="text-center">Ou voulez-vous <a href="{{path('app_login')}}">Vous connecter ?</a></p>
            </form>
        </div>
{% endblock %}
